{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#root",
  "definitions": {
    "NumOrPercentage": {
      "$id": "#NumOrPercentage",
      "type": ["number", "string"],
      "default": 0
    },
    "color": {
      "$id": "#common.color",
      "type": "string"
    },
    "thickness": {
      "$id": "#common.thickness",
      "$ref": "#NumOrPercentage"
    },
    "length": {
      "$id": "#common.length",
      "$ref": "#NumOrPercentage"
    },
    "eventMap": {
      "$id": "#common.eventMap",
      "type": "object",
      "default": {
        "1": "notify-send 'left click'"
      }
    },
    "pulseAudio": {
      "$id": "#common.pulseaudio",
      "properties": {
        "mute_color": { "$ref": "#common.color", "default": "#000000" },
        "device": {
          "type": ["string", "null"]
        }
      }
    },
    "BtnWidget": {
      "$id": "#Btn",
      "properties": {
        "color": { "$ref": "#common.color", "default": "#7B98FF" },
        "event_map": { "$ref": "#common.eventMap" },
        "thickness": { "$ref": "#common.thickness" },
        "length": { "$ref": "#common.length" },
        "border_width": { "type": "integer" },
        "border_color": { "$ref": "#common.color", "default": "#000" }
      }
    },
    "SliderCustomPreset": {
      "$id": "#SliderCustomPreset"
    },
    "SliderSpeakerPreset": {
      "$id": "#SliderSpeakerPreset",
      "$ref": "#common.pulseaudio"
    },
    "SliderMicrophonePreset": {
      "$id": "#SliderMicrophonePreset",
      "$ref": "#common.pulseaudio"
    },
    "SliderBacklightPreset": {
      "$id": "#SliderBacklightPreset",
      "properties": {
        "device": {
          "type": ["string", "null"]
        }
      }
    },
    "SliderPresets": {
      "$id": "#SliderPresets",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["speaker", "microphone", "backlight", "custom"]
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "speaker" } } },
          "then": { "$ref": "#SliderSpeakerPreset" }
        },
        {
          "if": { "properties": { "type": { "const": "microphone" } } },
          "then": { "$ref": "#SliderMicrophonePreset" }
        },
        {
          "if": { "properties": { "type": { "const": "backlight" } } },
          "then": { "$ref": "#SliderBacklightPreset" }
        },
        {
          "if": { "properties": { "type": { "const": "custom" } } },
          "then": { "$ref": "#SliderCustomPreset" }
        }
      ]
    },
    "SlideWidget": {
      "$id": "#Slider",
      "properties": {
        "bg_color": { "$ref": "#common.color", "default": "#808080" },
        "fg_color": { "$ref": "#common.color", "default": "#FFB847" },
        "border_color": { "$ref": "#common.color", "default": "#646464" },
        "text_color": { "$ref": "#common.color", "default": "#000000" },
        "obtuse_angle": {
          "type": "number",
          "default": 120
        },
        "radius": {
          "type": "number",
          "default": 20
        },
        "redraw_only_on_internal_update": {
          "type": "boolean"
        },
        "event_map": { "$ref": "#common.eventMap" },
        "thickness": { "$ref": "#common.thickness" },
        "length": { "$ref": "#common.length" },
        "border_width": { "type": "integer" },
        "preset": {
          "$ref": "#SliderPresets"
        }
      },
      "required": ["thickness", "length"]
    },
    "BoxOutlookWindow": {
      "$id": "#box.outlook.window",
      "properties": {
        "type": { "type": "string", "const": "window" },
        "margins": {
          "properties": {
            "top": {
              "$ref": "#/definitions/NumOrPercentage"
            },
            "bottom": {
              "$ref": "#/definitions/NumOrPercentage"
            },
            "left": {
              "$ref": "#/definitions/NumOrPercentage"
            },
            "right": {
              "$ref": "#/definitions/NumOrPercentage"
            }
          }
        },
        "color": { "$ref": "#common.color" },
        "border_radius": { "type": "number", "minimum": 1 },
        "border_width": { "type": "number", "minimum": 1 }
      }
    },
    "BoxedWidgets": {
      "$id": "#box.widgets",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text", "ring", "tray"]
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "ring" } } },
          "then": { "$ref": "#Ring" }
        },
        {
          "if": { "properties": { "type": { "const": "text" } } },
          "then": { "$ref": "#Text" }
        },
        {
          "if": { "properties": { "type": { "const": "tray" } } },
          "then": { "$ref": "#Tray" }
        }
      ]
    },
    "Box": {
      "$id": "#Box",
      "properties": {
        "widgets": {
          "type": "array",
          "items": {
            "properties": {
              "index": {
                "type": "array",
                "prefixItems": [{ "type": "number" }, { "type": "number" }]
              },
              "widget": {
                "$ref": "#box.widgets"
              }
            }
          }
        },
        "gap": {
          "type": "number",
          "minimum": 0
        },
        "align": {
          "type": "string",
          "enum": [
            "top_left",
            "top_center",
            "top_right",
            "center_left,",
            "center_center",
            "center_right",
            "bottom_left",
            "bottom_center",
            "bottom_right"
          ],
          "default": "top_left"
        },
        "outlook": { "oneOf": [{ "$ref": "#box.outlook.window" }] }
      }
    },
    "Ring": {
      "$id": "#Ring",
      "properties": {
        "radius": {
          "type": "number",
          "default": 13
        },
        "ring_width": {
          "type": "number",
          "default": 5
        },
        "bg_color": {
          "$ref": "#common.color",
          "default": "#9F9F9F"
        },
        "fg_color": {
          "$ref": "#common.color",
          "default": "#F1FA8C"
        },
        "text_transition_ms": {
          "default": 100,
          "type": "integer",
          "minimum": 0
        },
        "prefix": {
          "type": ["null", "string"]
        },
        "prefix_hide": {
          "default": false,
          "type": "boolean"
        },
        "suffix": {
          "type": ["null", "string"]
        },
        "suffix_hide": {
          "default": false,
          "type": "boolean"
        },
        "font_family": {
          "type": "string"
        },
        "font_size": {
          "type": "integer"
        },
        "preset": {
          "oneOf": [
            {
              "properties": {
                "type": { "type": "string", "const": "ram" },
                "update_interval": { "type": "integer" }
              }
            },
            {
              "properties": {
                "type": { "type": "string", "const": "swap" },
                "update_interval": { "type": "integer" }
              }
            },
            {
              "properties": {
                "type": { "type": "string", "const": "cpu" },
                "update_interval": { "type": "integer" },
                "core": { "type": "integer" }
              }
            },
            {
              "properties": {
                "type": { "type": "string", "const": "disk" },
                "update_interval": { "type": "integer" },
                "partition": {
                  "type": "string",
                  "default": "/"
                }
              }
            },
            {
              "properties": {
                "type": {
                  "type": "string",
                  "const": "battery"
                },
                "update_interval": { "type": "integer" }
              }
            },
            {
              "properties": {
                "type": { "type": "string", "const": "custom" },
                "update_interval": { "type": "integer" },
                "cmd": { "type": "string" }
              }
            }
          ]
        }
      }
    },
    "Text": {
      "$id": "#Text",
      "properties": {
        "fg_color": {
          "$ref": "#common.color",
          "default": "#000000"
        },
        "font_family": {
          "type": "string"
        },
        "font_size": {
          "type": "integer",
          "default": 24
        },
        "preset": {
          "oneOf": [
            {
              "properties": {
                "type": { "type": "string", "const": "time" },
                "format": {
                  "type": "string",
                  "default": "%Y-%m-%d %H:%M:%S"
                },
                "update_interval": {
                  "type": "integer",
                  "default": 1000
                },
                "time_zone": {
                  "type": "string"
                }
              }
            },
            {
              "properties": {
                "type": { "type": "string", "const": "custom" },
                "update_with_interval_ms": {
                  "type": "array",
                  "default": [1000, "echo -n example_text"],
                  "prefixItems": [
                    { "type": "integer", "minimum": 1 },
                    { "type": "string" }
                  ]
                }
              }
            }
          ]
        }
      }
    },
    "Tray": {
      "$id": "#Tray",
      "properties": {
        "font_family": {
          "type": ["string", "null"]
        },
        "icon_size": {
          "type": "integer",
          "default": 20
        },
        "tray_gap": {
          "type": "integer",
          "default": 2
        },
        "grid_align": {
          "type": "string",
          "enum": [
            "top_left",
            "top_center",
            "top_right",
            "center_left,",
            "center_center",
            "center_right",
            "bottom_left",
            "bottom_center",
            "bottom_right"
          ],
          "default": "top_left"
        },
        "header_menu_stack": {
          "type": "string",
          "enum": ["header_top", "menu_top"],
          "default": "header_top"
        },
        "header_menu_align": {
          "type": "string",
          "enum": ["left", "right"],
          "default": "left"
        },
        "header_draw_config": {
          "properties": {
            "font_pixel_height": {
              "type": "integer",
              "default": 16
            },
            "text_color": {
              "$ref": "#common.color",
              "default": "#FFF"
            }
          }
        },
        "menu_draw_config": {
          "properties": {
            "margin": {
              "type": "array",
              "prefixItems": [{ "type": "number" }, { "type": "number" }],
              "default": [12, 16]
            },
            "font_pixel_height": {
              "type": "integer",
              "default": 20
            },
            "icon_size": {
              "type": "integer",
              "default": 20
            },
            "marker_size": {
              "type": "integer",
              "default": 20
            },
            "separator_height": {
              "type": "integer",
              "default": 5
            },
            "border_color": {
              "$ref": "#common.color",
              "default": "#FFF"
            },
            "text_color": {
              "$ref": "#common.color",
              "default": "#FFF"
            },
            "marker_color": {
              "$ref": "#common.color",
              "default": null
            }
          }
        }
      }
    },
    "Workspace": {
      "$id": "#Workspace",
      "properties": {
        "thickness": { "$ref": "#common.thickness" },
        "length": { "$ref": "#common.length" },
        "gap": {
          "type": "integer",
          "default": 5
        },
        "active_increase": {
          "type": "number",
          "default": 0.5
        },
        "workspace_transition_duration": {
          "type": "integer",
          "default": 300
        },
        "pop_duration": {
          "type": "integer",
          "default": 1000
        },
        "default_color": { "$ref": "#common.color", "default": "#003049" },
        "focus_color": { "$ref": "#common.color", "default": "#003049" },
        "active_color": { "$ref": "#common.color", "default": "#669bbc" },
        "hover_color": { "$ref": "#common.color", "default": "" },
        "intert_direction": { "type": "boolean" },
        "output_name": { "type": ["string", "null"] },
        "preset": { "type": "string", "enum": ["hyprland", "niri"] }
      }
    }
  },
  "properties": {
    "widgets": {
      "$id": "#AllWidgets",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["btn", "slider", "wrap-box", "workspace"]
        }
      },
      "allOf": [
        {
          "if": { "properties": { "type": { "const": "btn" } } },
          "then": { "$ref": "#Btn" }
        },
        {
          "if": { "properties": { "type": { "const": "slider" } } },
          "then": { "$ref": "#Slider" }
        },
        {
          "if": { "properties": { "type": { "const": "wrap-box" } } },
          "then": { "$ref": "#Box" }
        },
        {
          "if": { "properties": { "type": { "const": "workspace" } } },
          "then": { "$ref": "#Workspace" }
        }
      ]
    }
  }
}
