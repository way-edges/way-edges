{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "properties": {
    "widgets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/WidgetConf"
      }
    }
  },
  "required": [
    "widgets"
  ],
  "$defs": {
    "Align": {
      "type": "string",
      "enum": [
        "top-left",
        "top-center",
        "top-right",
        "center-left",
        "center-center",
        "center-right",
        "bottom-left",
        "bottom-center",
        "bottom-right"
      ]
    },
    "BoxedWidgetConfig": {
      "type": "object",
      "properties": {
        "index": {
          "type": "array",
          "default": [
            -1,
            -1
          ],
          "items": {
            "type": "integer",
            "format": "int"
          },
          "maxItems": 2,
          "minItems": 2
        }
      },
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "animation-curve": {
              "$ref": "#/$defs/Curve"
            },
            "bg-color": {
              "type": "string",
              "default": "#00000000"
            },
            "event-map": {
              "$ref": "#/$defs/KeyEventMap"
            },
            "fg-color": {
              "type": "string",
              "default": "#00000000"
            },
            "font-family": {
              "type": "string",
              "default": "monospace",
              "enum": [
                "serif",
                "sans-serif",
                "cursive",
                "fantasy",
                "monospace"
              ]
            },
            "font-size": {
              "type": [
                "integer",
                "null"
              ],
              "format": "int32",
              "default": null
            },
            "prefix": {
              "type": [
                "string",
                "null"
              ],
              "default": "{float:2,100}"
            },
            "prefix-hide": {
              "type": "boolean",
              "default": false
            },
            "preset": {
              "$ref": "#/$defs/RingPreset"
            },
            "radius": {
              "type": "integer",
              "format": "int32",
              "default": 13
            },
            "ring-width": {
              "type": "integer",
              "format": "int32",
              "default": 5
            },
            "suffix": {
              "type": [
                "string",
                "null"
              ],
              "default": "{float:2,100}"
            },
            "suffix-hide": {
              "type": "boolean",
              "default": false
            },
            "text-transition-ms": {
              "type": "integer",
              "format": "uint64",
              "default": 300,
              "minimum": 0
            },
            "type": {
              "type": "string",
              "const": "ring"
            }
          },
          "required": [
            "type",
            "preset"
          ]
        },
        {
          "type": "object",
          "properties": {
            "event-map": {
              "$ref": "#/$defs/KeyEventMap"
            },
            "fg-color": {
              "type": "string",
              "default": "#00000000"
            },
            "font-family": {
              "type": "string",
              "default": "monospace",
              "enum": [
                "serif",
                "sans-serif",
                "cursive",
                "fantasy",
                "monospace"
              ]
            },
            "font-size": {
              "type": "integer",
              "format": "int32",
              "default": 24
            },
            "preset": {
              "$ref": "#/$defs/TextPreset"
            },
            "type": {
              "type": "string",
              "const": "text"
            }
          },
          "required": [
            "type",
            "preset"
          ]
        },
        {
          "type": "object",
          "properties": {
            "font-family": {
              "type": "string",
              "default": "monospace",
              "enum": [
                "serif",
                "sans-serif",
                "cursive",
                "fantasy",
                "monospace"
              ]
            },
            "grid-align": {
              "$ref": "#/$defs/Align"
            },
            "header-draw-config": {
              "$ref": "#/$defs/HeaderDrawConfig"
            },
            "header-menu-align": {
              "$ref": "#/$defs/HeaderMenuAlign"
            },
            "header-menu-stack": {
              "$ref": "#/$defs/HeaderMenuStack"
            },
            "icon-size": {
              "type": "integer",
              "format": "int32",
              "default": 20
            },
            "icon-theme": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "menu-draw-config": {
              "$ref": "#/$defs/MenuDrawConfig"
            },
            "tray-gap": {
              "type": "integer",
              "format": "int32",
              "default": 2
            },
            "type": {
              "type": "string",
              "const": "tray"
            }
          },
          "required": [
            "type"
          ]
        }
      ],
      "unevaluatedProperties": false
    },
    "Btn": {
      "type": "object",
      "properties": {
        "animation-curve": {
          "$ref": "#/$defs/Curve"
        },
        "border-color": {
          "type": "string",
          "default": "#00000000"
        },
        "border-width": {
          "type": "integer",
          "format": "int32",
          "default": 3
        },
        "color": {
          "type": "string",
          "default": "#00000000"
        },
        "edge": {
          "type": "string",
          "enum": [
            "top",
            "bottom",
            "left",
            "right"
          ]
        },
        "event-map": {
          "$ref": "#/$defs/KeyEventMap"
        },
        "extra-trigger-size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "ignore-exclusive": {
          "type": "boolean",
          "default": false
        },
        "layer": {
          "type": "string",
          "enum": [
            "top",
            "bottom",
            "background",
            "overlay"
          ]
        },
        "length": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "margins": {
          "$ref": "#/$defs/Margins"
        },
        "monitor": {
          "$ref": "#/$defs/MonitorSpecifier"
        },
        "namespace": {
          "type": "string",
          "default": ""
        },
        "offset": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "pin-key": {
          "type": "integer",
          "format": "uint32",
          "default": 274,
          "minimum": 0
        },
        "pin-on-startup": {
          "type": "boolean",
          "default": false
        },
        "pin-with-key": {
          "type": "boolean",
          "default": false
        },
        "pinnable": {
          "type": "boolean",
          "default": false
        },
        "position": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "top",
            "bottom",
            "left",
            "right"
          ]
        },
        "preview-size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "thickness": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "transition-duration": {
          "type": "integer",
          "format": "uint64",
          "default": 300,
          "minimum": 0
        },
        "type": {
          "const": "btn"
        }
      },
      "required": [
        "edge",
        "thickness",
        "length"
      ]
    },
    "Curve": {
      "type": "string",
      "enum": [
        "Linear",
        "EaseQuad",
        "EaseCubic",
        "EaseExpo"
      ]
    },
    "HeaderDrawConfig": {
      "type": "object",
      "properties": {
        "font-pixel-height": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "text-color": {
          "type": "string",
          "default": "#00000000"
        }
      },
      "additionalProperties": false
    },
    "HeaderMenuAlign": {
      "type": "string",
      "enum": [
        "left",
        "right"
      ]
    },
    "HeaderMenuStack": {
      "type": "string",
      "enum": [
        "header-top",
        "menu-top"
      ]
    },
    "KeyEventMap": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(mouse-left|mouse-right|mouse-middle|mouse-side|mouse-extra|mouse-forward|mouse-back)$": {
          "type": "string"
        },
        "^\\d+$": {
          "type": "string"
        }
      }
    },
    "Margins": {
      "type": "object",
      "properties": {
        "bottom": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "left": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "right": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "top": {
          "$ref": "#/$defs/NumOrRelative"
        }
      }
    },
    "MenuDrawConfig": {
      "type": "object",
      "properties": {
        "border-color": {
          "type": "string",
          "default": "#00000000"
        },
        "font-pixel-height": {
          "type": "integer",
          "format": "int32",
          "default": 22
        },
        "icon-size": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "margin": {
          "$ref": "#/$defs/NumMargins"
        },
        "marker-color": {
          "type": [
            "string",
            "null"
          ],
          "default": "#00000000"
        },
        "marker-size": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "separator-height": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "text-color": {
          "type": "string",
          "default": "#00000000"
        }
      },
      "additionalProperties": false
    },
    "MonitorSpecifier": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "enum": [
            "*"
          ]
        },
        {
          "type": "number",
          "minimum": 0
        },
        {
          "type": "array",
          "items": {
            "type": [
              "string",
              "number"
            ]
          }
        }
      ]
    },
    "NiriConf": {
      "type": "object",
      "properties": {
        "preserve-empty": {
          "type": "boolean",
          "default": false
        },
        "type": {
          "const": "niri"
        }
      },
      "additionalProperties": false
    },
    "NumMargins": {
      "type": "object",
      "properties": {
        "bottom": {
          "type": "integer",
          "format": "int32",
          "default": 0
        },
        "left": {
          "type": "integer",
          "format": "int32",
          "default": 0
        },
        "right": {
          "type": "integer",
          "format": "int32",
          "default": 0
        },
        "top": {
          "type": "integer",
          "format": "int32",
          "default": 0
        }
      }
    },
    "NumOrRelative": {
      "type": [
        "number",
        "string"
      ],
      "anyOf": [
        {
          "description": "absolute number",
          "type": "number"
        },
        {
          "description": "relative number",
          "type": "string",
          "pattern": "^(\\d+(\\.\\d+)?)%\\s*(.*)$"
        }
      ]
    },
    "Outlook": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "window"
            }
          },
          "$ref": "#/$defs/OutlookWindowConfig",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "board"
            }
          },
          "$ref": "#/$defs/OutlookBoardConfig",
          "required": [
            "type"
          ]
        }
      ]
    },
    "OutlookBoardConfig": {
      "type": "object",
      "properties": {
        "border-radius": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "color": {
          "type": "string",
          "default": "#00000000"
        },
        "margins": {
          "$ref": "#/$defs/NumMargins"
        }
      }
    },
    "OutlookWindowConfig": {
      "type": "object",
      "properties": {
        "border-radius": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "border-width": {
          "type": "integer",
          "format": "int32",
          "default": 15
        },
        "color": {
          "type": "string",
          "default": "#00000000"
        },
        "margins": {
          "$ref": "#/$defs/NumMargins"
        }
      }
    },
    "Preset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "animation-curve": {
              "$ref": "#/$defs/Curve"
            },
            "device": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "mute-color": {
              "type": "string",
              "default": "#00000000"
            },
            "mute-text-color": {
              "type": [
                "string",
                "null"
              ],
              "default": "#00000000"
            },
            "type": {
              "type": "string",
              "const": "speaker"
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "animation-curve": {
              "$ref": "#/$defs/Curve"
            },
            "device": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "mute-color": {
              "type": "string",
              "default": "#00000000"
            },
            "mute-text-color": {
              "type": [
                "string",
                "null"
              ],
              "default": "#00000000"
            },
            "type": {
              "type": "string",
              "const": "microphone"
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "device": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "type": {
              "type": "string",
              "const": "backlight"
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "event-map": {
              "$ref": "#/$defs/KeyEventMap"
            },
            "on-change-command": {
              "type": [
                "string",
                "null"
              ],
              "default": "{float:2,100}"
            },
            "type": {
              "type": "string",
              "const": "custom"
            },
            "update-command": {
              "type": "string",
              "default": ""
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 0,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        }
      ]
    },
    "RingPreset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "ram"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "swap"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "core": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint",
              "default": null,
              "minimum": 0
            },
            "type": {
              "type": "string",
              "const": "cpu"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "battery"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "partition": {
              "type": "string",
              "default": "/"
            },
            "type": {
              "type": "string",
              "const": "disk"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "cmd": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "custom"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "cmd"
          ]
        }
      ]
    },
    "Slide": {
      "type": "object",
      "properties": {
        "animation-curve": {
          "$ref": "#/$defs/Curve"
        },
        "bg-color": {
          "type": "string",
          "default": "#00000000"
        },
        "bg-text-color": {
          "type": [
            "string",
            "null"
          ],
          "default": "#00000000"
        },
        "border-color": {
          "type": "string",
          "default": "#00000000"
        },
        "border-width": {
          "type": "integer",
          "format": "int32",
          "default": 3
        },
        "edge": {
          "type": "string",
          "enum": [
            "top",
            "bottom",
            "left",
            "right"
          ]
        },
        "extra-trigger-size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "fg-color": {
          "type": "string",
          "default": "#00000000"
        },
        "fg-text-color": {
          "type": [
            "string",
            "null"
          ],
          "default": "#00000000"
        },
        "ignore-exclusive": {
          "type": "boolean",
          "default": false
        },
        "layer": {
          "type": "string",
          "enum": [
            "top",
            "bottom",
            "background",
            "overlay"
          ]
        },
        "length": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "margins": {
          "$ref": "#/$defs/Margins"
        },
        "monitor": {
          "$ref": "#/$defs/MonitorSpecifier"
        },
        "namespace": {
          "type": "string",
          "default": ""
        },
        "obtuse-angle": {
          "type": "number",
          "format": "double",
          "default": 120.0
        },
        "offset": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "pin-key": {
          "type": "integer",
          "format": "uint32",
          "default": 274,
          "minimum": 0
        },
        "pin-on-startup": {
          "type": "boolean",
          "default": false
        },
        "pin-with-key": {
          "type": "boolean",
          "default": false
        },
        "pinnable": {
          "type": "boolean",
          "default": false
        },
        "position": {
          "type": [
            "string",
            "null"
          ],
          "enum": [
            "top",
            "bottom",
            "left",
            "right"
          ]
        },
        "preset": {
          "$ref": "#/$defs/Preset"
        },
        "preview-size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "radius": {
          "type": "number",
          "format": "double",
          "default": 20.0
        },
        "redraw-only-on-internal-update": {
          "type": "boolean",
          "default": false
        },
        "scroll-unit": {
          "type": "number",
          "format": "double",
          "default": 0.005
        },
        "thickness": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "transition-duration": {
          "type": "integer",
          "format": "uint64",
          "default": 300,
          "minimum": 0
        },
        "type": {
          "const": "slide"
        }
      },
      "required": [
        "edge",
        "thickness",
        "length"
      ]
    },
    "TextPreset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "default": "%Y-%m-%d %H:%M:%S"
            },
            "time-zone": {
              "type": [
                "string",
                "null"
              ],
              "default": null
            },
            "type": {
              "type": "string",
              "const": "time"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "cmd": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "custom"
            },
            "update-interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "cmd"
          ]
        }
      ]
    },
    "WidgetConf": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "btn"
            }
          },
          "$ref": "#/$defs/Btn",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "slide"
            }
          },
          "$ref": "#/$defs/Slide",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "workspace"
            }
          },
          "$ref": "#/$defs/Workspace",
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "wrap-box"
            }
          },
          "$ref": "#/$defs/WrapBox",
          "required": [
            "type"
          ]
        }
      ]
    },
    "Workspace": {
      "type": "object",
