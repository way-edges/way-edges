{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Root",
  "type": "object",
  "properties": {
    "widgets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Widget"
      }
    }
  },
  "allowTrailingCommas": true,
  "$defs": {
    "Align": {
      "type": "string",
      "enum": [
        "top_left",
        "top_center",
        "top_right",
        "center_left",
        "center_center",
        "center_right",
        "bottom_left",
        "bottom_center",
        "bottom_right"
      ]
    },
    "BoxedWidgetConfig": {
      "type": "object",
      "properties": {
        "index": {
          "type": "array",
          "default": [-1, -1],
          "items": {
            "type": "integer",
            "format": "int"
          },
          "maxItems": 2,
          "minItems": 2
        }
      },
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "ring"
            },
            "animation_curve": {
              "$ref": "#/$defs/Curve"
            },
            "bg_color": {
              "type": "string",
              "default": "#00000000"
            },
            "fg_color": {
              "type": "string",
              "default": "#00000000"
            },
            "font_family": {
              "$ref": "#/$defs/FamilyOwned",
              "default": "monospace"
            },
            "font_size": {
              "type": "integer",
              "format": "int32"
            },
            "prefix": {
              "type": ["string", "null"],
              "default": "{float:2,100}"
            },
            "prefix_hide": {
              "type": "boolean"
            },
            "preset": {
              "$ref": "#/$defs/RingPreset"
            },
            "radius": {
              "type": "integer",
              "format": "int32"
            },
            "ring_width": {
              "type": "integer",
              "format": "int32"
            },
            "suffix": {
              "type": ["string", "null"],
              "default": "{float:2,100}"
            },
            "suffix_hide": {
              "type": "boolean"
            },
            "text_transition_ms": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0
            }
          },
          "required": [
            "type",
            "radius",
            "ring_width",
            "bg_color",
            "fg_color",
            "text_transition_ms",
            "animation_curve",
            "prefix",
            "prefix_hide",
            "suffix",
            "suffix_hide",
            "font_size",
            "preset"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "text"
            },
            "fg_color": {
              "type": "string",
              "default": "#00000000"
            },
            "font_family": {
              "$ref": "#/$defs/FamilyOwned",
              "default": "monospace"
            },
            "font_size": {
              "type": "integer",
              "format": "int32",
              "default": 24
            },
            "preset": {
              "$ref": "#/$defs/TextPreset"
            }
          },
          "required": ["type", "preset"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "tray"
            },
            "font_family": {
              "$ref": "#/$defs/FamilyOwned",
              "default": "monospace"
            },
            "grid_align": {
              "$ref": "#/$defs/Align"
            },
            "header_draw_config": {
              "$ref": "#/$defs/HeaderDrawConfig"
            },
            "header_menu_align": {
              "$ref": "#/$defs/HeaderMenuAlign"
            },
            "header_menu_stack": {
              "$ref": "#/$defs/HeaderMenuStack"
            },
            "icon_size": {
              "type": "integer",
              "format": "int32",
              "default": 20
            },
            "icon_theme": {
              "type": ["string", "null"],
              "default": null
            },
            "menu_draw_config": {
              "$ref": "#/$defs/MenuDrawConfig"
            },
            "tray_gap": {
              "type": "integer",
              "format": "int32",
              "default": 2
            }
          },
          "required": ["type"]
        }
      ],
      "unevaluatedProperties": false
    },
    "Curve": {
      "type": "string",
      "enum": ["linear", "ease-quad", "ease-cubic", "ease-expo"]
    },
    "FamilyOwned": {
      "oneOf": [
        {
          "enum": ["serif", "sans-serif", "cursive", "fantasy", "monospace"]
        },
        {
          "type": "string"
        }
      ]
    },
    "HeaderDrawConfig": {
      "type": "object",
      "properties": {
        "font_pixel_height": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "text_color": {
          "type": "string",
          "default": "#00000000"
        }
      },
      "additionalProperties": false
    },
    "HeaderMenuAlign": {
      "type": "string",
      "enum": ["left", "right"]
    },
    "HeaderMenuStack": {
      "type": "string",
      "enum": ["header_top", "menu_top"]
    },
    "KeyEventMap": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^\\d+$": {
          "type": "string"
        }
      }
    },
    "Margins": {
      "type": "object",
      "properties": {
        "bottom": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "left": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "right": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "top": {
          "$ref": "#/$defs/NumOrRelative"
        }
      },
      "additionalProperties": false
    },
    "MenuDrawConfig": {
      "type": "object",
      "properties": {
        "border_color": {
          "type": "string",
          "default": "#00000000"
        },
        "font_pixel_height": {
          "type": "integer",
          "format": "int32",
          "default": 22
        },
        "icon_size": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "margin": {
          "type": "array",
          "default": [12, 12],
          "items": {
            "type": "integer",
            "format": "int32"
          },
          "maxItems": 2,
          "minItems": 2
        },
        "marker_color": {
          "type": ["string", "null"],
          "default": "#00000000"
        },
        "marker_size": {
          "type": "integer",
          "format": "int32",
          "default": 20
        },
        "separator_height": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "text_color": {
          "type": "string",
          "default": "#00000000"
        }
      },
      "additionalProperties": false
    },
    "MonitorSpecifier": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "enum": ["*"]
        },
        {
          "type": "number",
          "minimum": 0
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "NiriConf": {
      "type": "object",
      "properties": {
        "type": {
          "const": "niri"
        },
        "filter_empty": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "NumOrRelative": {
      "type": ["number", "string"],
      "anyOf": [
        {
          "description": "absolute number",
          "type": "number"
        },
        {
          "description": "relative number",
          "type": "string",
          "pattern": "^(\\d+(\\.\\d+)?)%\\s*(.*)$"
        }
      ]
    },
    "Outlook": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "window"
            },
            "border_radius": {
              "type": "integer",
              "format": "int32",
              "default": 5
            },
            "border_width": {
              "type": "integer",
              "format": "int32",
              "default": 15
            },
            "color": {
              "type": "string",
              "default": "#00000000"
            },
            "margins": {
              "$ref": "#/$defs/OutlookMargins"
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "board"
            }
          },
          "$ref": "#/$defs/OutlookBoardConfig",
          "required": ["type"]
        }
      ]
    },
    "OutlookBoardConfig": {
      "type": "object",
      "properties": {
        "border_radius": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "color": {
          "type": "string",
          "default": "#00000000"
        },
        "margins": {
          "$ref": "#/$defs/OutlookMargins"
        }
      }
    },
    "OutlookMargins": {
      "type": "object",
      "properties": {
        "bottom": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "left": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "right": {
          "type": "integer",
          "format": "int32",
          "default": 5
        },
        "top": {
          "type": "integer",
          "format": "int32",
          "default": 5
        }
      }
    },
    "Preset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "speaker"
            },
            "animation_curve": {
              "$ref": "#/$defs/Curve"
            },
            "device": {
              "type": ["string", "null"]
            },
            "mute_color": {
              "type": "string",
              "default": "#00000000"
            },
            "mute_text_color": {
              "type": ["string", "null"],
              "default": "#00000000"
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "microphone"
            },
            "animation_curve": {
              "$ref": "#/$defs/Curve"
            },
            "device": {
              "type": ["string", "null"]
            },
            "mute_color": {
              "type": "string",
              "default": "#00000000"
            },
            "mute_text_color": {
              "type": ["string", "null"],
              "default": "#00000000"
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "backlight"
            },
            "device": {
              "type": ["string", "null"],
              "default": null
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "custom"
            },
            "event_map": {
              "$ref": "#/$defs/KeyEventMap"
            },
            "interval_update": {
              "type": "array",
              "default": [0, ""],
              "maxItems": 2,
              "minItems": 2,
              "prefixItems": [
                {
                  "type": "integer",
                  "format": "uint64",
                  "minimum": 0
                },
                {
                  "type": "string"
                }
              ]
            },
            "on_change": {
              "type": ["string", "null"],
              "default": "{float:2,100}"
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        }
      ]
    },
    "RingPreset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "ram"
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "swap"
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "cpu"
            },
            "core": {
              "type": ["integer", "null"],
              "format": "uint",
              "default": null,
              "minimum": 0
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "battery"
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "disk"
            },
            "partition": {
              "type": "string",
              "default": "/"
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "custom"
            },
            "cmd": {
              "type": "string"
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type", "update_interval", "cmd"]
        }
      ]
    },
    "TextPreset": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "time"
            },
            "format": {
              "type": "string",
              "default": "%Y-%m-%d %H:%M:%S"
            },
            "time_zone": {
              "type": ["string", "null"],
              "default": null
            },
            "update_interval": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            }
          },
          "additionalProperties": false,
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "custom"
            },
            "update_with_interval_ms": {
              "type": "array",
              "maxItems": 2,
              "minItems": 2,
              "prefixItems": [
                {
                  "type": "integer",
                  "format": "uint64",
                  "minimum": 0
                },
                {
                  "type": "string"
                }
              ]
            }
          },
          "additionalProperties": false,
          "required": ["type", "update_with_interval_ms"]
        }
      ]
    },
    "Widget": {
      "type": "object",
      "properties": {
        "animation_curve": {
          "$ref": "#/$defs/Curve"
        },
        "edge": {
          "type": "string",
          "enum": ["top", "bottom", "left", "right"]
        },
        "extra_trigger_size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "ignore_exclusive": {
          "type": "boolean"
        },
        "layer": {
          "type": "string",
          "enum": ["top", "bottom", "background", "overlay"]
        },
        "margins": {
          "$ref": "#/$defs/Margins"
        },
        "monitor": {
          "$ref": "#/$defs/MonitorSpecifier"
        },
        "namespace": {
          "type": "string"
        },
        "pin_key": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "pin_with_key": {
          "type": "boolean"
        },
        "pinnable": {
          "type": "boolean"
        },
        "position": {
          "type": ["string", "null"],
          "enum": ["top", "bottom", "left", "right"]
        },
        "preview_size": {
          "$ref": "#/$defs/NumOrRelative"
        },
        "transition_duration": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        }
      },
      "allowTrailingCommas": true,
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "btn"
            },
            "border_color": {
              "type": "string",
              "default": "#00000000"
            },
            "border_width": {
              "type": "integer",
              "format": "int32",
              "default": 3
            },
            "color": {
              "type": "string",
              "default": "#00000000"
            },
            "event_map": {
              "$ref": "#/$defs/KeyEventMap"
            },
            "length": {
              "$ref": "#/$defs/NumOrRelative"
            },
            "thickness": {
              "$ref": "#/$defs/NumOrRelative"
            }
          },
          "required": ["type", "thickness", "length"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "slider"
            },
            "bg_color": {
              "type": "string",
              "default": "#00000000"
            },
            "bg_text_color": {
              "type": ["string", "null"],
              "default": "#00000000"
            },
            "border_color": {
              "type": "string",
              "default": "#00000000"
            },
            "border_width": {
              "type": "integer",
              "format": "int32",
              "default": 3
            },
            "fg_color": {
              "type": "string",
              "default": "#00000000"
            },
            "fg_text_color": {
              "type": ["string", "null"],
              "default": "#00000000"
            },
            "length": {
              "$ref": "#/$defs/NumOrRelative"
            },
            "obtuse_angle": {
              "type": "number",
              "format": "double",
              "default": 120.0
            },
            "preset": {
              "$ref": "#/$defs/Preset"
            },
            "radius": {
              "type": "number",
              "format": "double",
              "default": 20.0
            },
            "redraw_only_on_internal_update": {
              "type": "boolean",
              "default": false
            },
            "thickness": {
              "$ref": "#/$defs/NumOrRelative"
            }
          },
          "required": ["type", "thickness", "length"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "wrap-box"
            },
            "align": {
              "$ref": "#/$defs/Align"
            },
            "gap": {
              "type": "number",
              "format": "double",
              "default": 10.0
            },
            "outlook": {
              "$ref": "#/$defs/Outlook"
            },
            "widgets": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/BoxedWidgetConfig"
              }
            }
          },
          "required": ["type"]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "workspace"
            },
            "active_color": {
              "type": "string",
              "default": "#00000000"
            },
            "active_increase": {
              "type": "number",
              "format": "double",
              "default": 0.5
            },
            "default_color": {
              "type": "string",
              "default": "#00000000"
            },
            "focus_color": {
              "type": "string",
              "default": "#00000000"
            },
            "focused_only": {
              "type": "boolean",
              "default": false
            },
            "gap": {
              "type": "integer",
              "format": "int32",
              "default": 5
            },
            "hover_color": {
              "type": ["string", "null"],
              "default": "#00000000"
            },
            "invert_direction": {
              "type": "boolean",
              "default": false
            },
            "length": {
              "$ref": "#/$defs/NumOrRelative"
            },
            "output_name": {
              "type": ["string", "null"],
              "default": null
            },
            "pop_duration": {
              "type": "integer",
              "format": "uint64",
              "default": 1000,
              "minimum": 0
            },
            "preset": {
              "$ref": "#/$defs/WorkspacePreset"
            },
            "thickness": {
              "$ref": "#/$defs/NumOrRelative"
            },
            "workspace_animation_curve": {
              "$ref": "#/$defs/Curve"
            },
            "workspace_transition_duration": {
              "type": "integer",
              "format": "uint64",
              "default": 300,
              "minimum": 0
            }
          },
          "required": ["type", "thickness", "length", "preset"]
        }
      ],
      "required": [
        "edge",
        "position",
        "layer",
        "margins",
        "monitor",
        "namespace",
        "ignore_exclusive",
        "transition_duration",
        "animation_curve",
        "extra_trigger_size",
        "preview_size",
        "pin_with_key",
        "pin_key",
        "pinnable"
      ]
    },
    "WorkspacePreset": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["hyprland", "niri"]
        },
        {
          "type": "object",
          "$ref": "#/$defs/NiriConf"
        }
      ]
    }
  }
}
